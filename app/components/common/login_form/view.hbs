{{#component "login-form-block js-comp"}}
<div class="login-block">
  <div class="login-title">
    <label class="">帐号登录</label>
  </div>
  <form class="login-form" action="" method="post">
    <div class="col-12 error-row">
      <div class="login-error input-row hidden no-margin">
        <i class="icon-zcy icon-alertfill login-error-icon"></i>
        <label id="error-text" class="error-text">账号或密码错误</label>
      </div>
    </div>
    <div class="col-12 input-row">
      <div class="input-group">
        <i class="icon-zcy icon-dengluyonghuming input-icon"></i>
        <input type="text" id="login-by" name="loginBy" value="" class="input" placeholder="请输入帐号/邮箱/手机号"/></div>
      </div>
    <div class="col-12 input-row">
      <div class="input-group">
        <i class="icon-zcy icon-denglumima input-icon"></i>
        <input type="password" id="password" name="password" value="" class="input" placeholder="请输入密码"/>
      </div>
    </div>
    <div class="col-12 input-row" id="div-captcha" hidden>
      <div class="input-group">
        <input type="text" id="captcha" name="captcha" value="" class="input-captcha input" placeholder="请输入验证码" autocomplete="off"/>
        <img alt="验证码" id="img-captcha" name="img-captcha" class="img-captcha" src="/api/user/captcha" title="看不清？点击更换" />
      </div>
    </div>
    <div class="col-12 remember-row">
      <input type="checkbox" name="auto-login" id="auto-login" class="auto-login-check" />
      <label class="auto-login">记住帐号</label>
    </div>
    <div class="col-12 input-row">
      <button type="button" id="login-now" name="login-now" class="btn btn-block login-btn">登录</button>
    </div>
    <div class="col-12 forget-items" id="forget-items">
      <a id="forget-username">忘记用户名？</a>
      <a href="/password-find/phone/fill-info">忘记密码？</a>
      <div class="popover-info" style="display: none;">请联系您的机构管理员，确认账户名和密码。</div>
    </div>
  </form>
</div>
<div class="chrome">
    <p class="chrome-suggest">我们推荐您使用Chrome浏览器，完美支持政采云系统</p>
    <a class="chrome-download" href="https://www.google.cn/chrome/browser/desktop/">
      <div class="pull-right chrome-name">Chrome 浏览器</div>
      <div class="pull-right"><img src="/assets/images/other-images/chrome.png"/></div>
    </a>
  </div>
{{/component}}
