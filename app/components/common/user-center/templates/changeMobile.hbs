<div class="info-block changeMobileDiv">
  <div class="row info-line">
    <div class="col-2 info-title">
      <label for="oldMobile">旧手机号：</label>
    </div>
    <div class="col-3 info-content">
      <label>{{user.mobile}}</label>
    </div>
  </div>
  <div class="row info-line">
    <div class="col-2 info-title">
      <label for="newMobile"><span class="asterisk">*&nbsp;</span>新手机号：</label>
    </div>
    <div class="col-3 info-content widthAuto">
      <input type="text" id="newMobile" class="input-medium" placeholder="请输入" checker-type="mobile" checker-text="false"/>
    </div>
    <div class="col-2 info-content">
      <button id="getVerifyCodeBtn-change" class="btn btn-minor">获取验证码</button>
    </div>
  </div>
  <div class="row info-line">
    <div class="col-2 info-title">
      <label for="verifyCode"><span class="asterisk">*&nbsp;</span>手机验证码：</label>
    </div>
    <div class="col-3 info-content">
      <input type="text" id="verifyCode" class="input-medium" placeholder="请输入" required/>
    </div>
  </div>
  <div class="row info-line">
    <div class="col-2 info-title">&nbsp;</div>
    <div class="col-3 info-content">
      <button id="mobileModifyConfirm" class="btn btn-minor">修改</button>
    </div>
  </div>
</div>
