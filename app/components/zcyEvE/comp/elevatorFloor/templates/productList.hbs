<ol class="products-list clearfix" data-items="{{json this}}">
  {{#each items}}
    <li class="product-item clearfix">
      <a href="/items/{{itemId}}?searchType=1">
        <div class="product-image"><img src="{{cdnPath mainImage '330w'}}"></div>
        <div class="product-info">
          <p class="product-name" title="{{itemName}}">{{itemName}}</p>
          <p class="product-price">
            <span>ï¿¥{{formatPrice lowPrice 0}}</span>
          </p>
        </div>
      </a>
    </li>
    {{#equals @index 3}}
      <div class="seperator-line"></div>
    {{/equals}}
  {{/each}}
  <div class="seperator-line"></div>
</ol>